<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/background_primary"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".SignUp"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <ImageView
            android:id="@+id/LogoImgView_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="logo"
            app:srcCompat="@drawable/logo" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <EditText
            android:id="@+id/usersNameET_signup"
            android:layout_width="375dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center"
            android:layout_gravity="center"
            android:hint="@string/name_hint"
            android:inputType="textPersonName" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <EditText
            android:id="@+id/usersSurnameET_signup"
            android:layout_width="375dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center"
            android:layout_gravity="center"
            android:hint="@string/surname_hint"
            android:inputType="textPersonName" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <EditText
            android:id="@+id/usersEmailET_signup"
            android:layout_width="375dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center"
            android:layout_gravity="center"
            android:hint="@string/email_hint"
            android:inputType="textEmailAddress" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <EditText
            android:id="@+id/usersPasswordET_signup"
            android:layout_width="375dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center"
            android:layout_gravity="center"
            android:hint="@string/password_hint"
            android:inputType="textPassword" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <EditText
            android:id="@+id/currentHeightET_signup"
            android:layout_width="375dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:hint="@string/height_hint_met"
            android:gravity="center"
            android:layout_gravity="center"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <EditText
            android:id="@+id/goalWeightET_signup"
            android:layout_width="375dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal"
            android:hint="@string/goal_weight_hint_met"
            android:gravity="center"
            android:layout_gravity="center"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <EditText
            android:id="@+id/calorieGoalNumET_signup"
            android:layout_width="375dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal"
            android:hint="@string/goal_calories_hint"
            android:gravity="center"
            android:layout_gravity="center"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <Button
            android:id="@+id/btnSignUp_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:backgroundTint="@color/buttons"
            android:text="@string/signup_button" />

    </LinearLayout>

</ScrollView>
